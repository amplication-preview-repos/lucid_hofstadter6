datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Comment {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
}

model Video {
  createdAt    DateTime @default(now())
  description  String?
  id           String   @id @default(cuid())
  thumbnailUrl String?
  title        String?
  updatedAt    DateTime @updatedAt
  url          String?
  user         User?    @relation(fields: [userId], references: [id])
  userId       String?
}

model Playlist {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
  videos    Video[]
}
